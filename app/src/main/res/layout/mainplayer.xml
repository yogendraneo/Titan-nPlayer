<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skBPlayer"
        android:indeterminate="false"
        android:layout_above="@+id/btnPP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pausebtn"
        android:id="@+id/btnPP"
        android:layout_alignTop="@+id/btnNext"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/btnNext" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sTitle"
        android:layout_marginBottom="10dp"
        android:editable="false"
        android:layout_above="@+id/sArtist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sArtist"
        android:editable="false"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/skBPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ArtView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/sTitle" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/prevbtn"
        android:id="@+id/btnprev"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_alignTop="@+id/btnPP"
        android:layout_toLeftOf="@+id/btnPP"
        android:layout_toStartOf="@+id/btnPP" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nextbtn"
        android:id="@+id/btnNext"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPP"
        android:layout_toEndOf="@+id/btnPP" />

</RelativeLayout>